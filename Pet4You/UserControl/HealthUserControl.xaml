<UserControl x:Class="Pet4You.UserControl.HealthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pet4You.UserControl"
             mc:Ignorable="d" 
              d:DesignHeight="150" d:DesignWidth="300">
    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="84*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <TextBox Margin="5" Width="100" Height="20" x:Name="DateTb"></TextBox>
                <TextBox Margin="5" Width="100" Height="20" x:Name="TimeTb"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                <TextBox Margin="5" Height="50" Width="200" TextWrapping="Wrap" x:Name="DesciptionTb"></TextBox>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
