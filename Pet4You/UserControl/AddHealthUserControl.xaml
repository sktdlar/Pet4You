<UserControl x:Class="Pet4You.UserControl.AddHealthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pet4You.UserControl"
             mc:Ignorable="d" 
                  d:DesignHeight="150" d:DesignWidth="300">
    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <Grid Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Margin="5" Height="80" Width="250" TextWrapping="Wrap" x:Name="DesciptionTb"></TextBox>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>