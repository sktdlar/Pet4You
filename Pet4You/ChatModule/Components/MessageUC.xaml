                <TextBlock TextWrapping="Wrap" Name="Timestamp" HorizontalAlignment="Right" Margin="0 0 10 5" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
